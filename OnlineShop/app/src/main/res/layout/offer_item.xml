<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/imageIcon"
            android:padding="5dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/offer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toStartOf="@+id/price_column"
            android:padding="10dp"
            android:text="@string/name"
            android:textColor="@color/colorFont"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offer_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offer_name"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toStartOf="@+id/price_column"
            android:maxLength="80"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:text="@string/offer_description"
            android:textColor="@color/colorFont"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/price_column"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offer_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/colorPrice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_currency"
                android:textColor="@color/colorPrice" />

        </LinearLayout>

        <TextView
            android:id="@+id/offer_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:visibility="gone" />

        <TextView
            android:id="@+id/categoryId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/categoryId"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.v7.widget.CardView>